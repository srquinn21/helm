#! /usr/bin/env node


var program = require('commander');

program
  .version(require('../package').version)
  .option('-p, --port <port>', 'specify the port [3000]', Number, 3000)

program
  .command('login')
  .description('Login to your Shipyard account.')
  .action(require('../lib/commands/login'));

program
  .command('serve')
  .description('Serve the contents of the given directory')
  .action(require('../lib/commands/serve'));

program.parse(process.argv);

// -- Display help on unknown command or no command
if ('string' === typeof program.args[0] || program.args.length === 0) {
  program.help();  
}